@page "{tableId:int}"
@model RazorPages.Pages.Reservations.Create

<form method="post">
    <div class="form-group">
        <label for="exampleInputFirst1">TableId</label>
        <input asp-for="reservation.TableId" type="text" class="form-control" id="exampleInputFirst1" readonly>
        <span asp-validation-for="reservation.TableId"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputLast1">CustomerId</label>
        <input asp-for="reservation.CustomerId" type="text" class="form-control" id="exampleInputLast1" placeholder="CustomerId">
        <span asp-validation-for="reservation.CustomerId"></span>
    </div>
    <div class="form-group">
        <label for="reservationDate">Reservation Date</label>
        <input asp-for="reservation.ReservationDate"
            type="datetime-local"
            class="form-control"
            value="@(Model.reservation.ReservationDate.ToString("yyyy-MM-ddTHH:mm"))"
            min="@(DateTime.UtcNow.ToString("yyyy-MM-ddTHH:mm"))"
            max="@(DateTime.UtcNow.AddMonths(1).ToString("yyyy-MM-ddTHH:mm"))"
            id="reservationDate" />
        <span asp-validation-for="reservation.ReservationDate"></span>
    </div>

    <script>
        document.getElementById('reservationDate').addEventListener('keydown', function(e) {
            e.preventDefault();
        });
    </script>

    <br/>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div style="text-align: center">
    @foreach(var message in Model.Messages)
    {
        <p>@message</p>
    }
</div>