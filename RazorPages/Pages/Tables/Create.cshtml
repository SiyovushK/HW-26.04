@page
@model RazorPages.Pages.Tables.Create

<form method="post">
    <div class="form-group">
        <label for="exampleInputFirst1">Table number</Table></label>
        <input asp-for="createTable.Number" type="text" class="form-control" id="exampleInputFirst1" placeholder="Table number">
        <span asp-validation-for="createTable.Number"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputLast1">Seats quantity</label>
        <input asp-for="createTable.Seats" type="text" class="form-control" id="exampleInputLast1" placeholder="Seats">
        <span asp-validation-for="createTable.Seats"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<div style="text-align: center">
    @foreach(var message in Model.Messages)
    {
        <p>@message</p>
    }
</div>